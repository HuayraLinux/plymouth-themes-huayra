fun messageHandler(msg)
{
	if (msg == "Restarting system...") {
		msg = "Reiniciando Huayra GNU/Linux...";
	}
	if (msg == "Shutting down system...") {
		msg = "Apagando la computadora...";
	}

	msg1_y = logo_sprite.GetY() + logo_height + 10;
	msg1 = Sprite(Image.Text(msg, 0.4, 0.4, 1, 1, "Rosario Bold 14"));
	msg1.SetPosition((medio) - (msg1.GetImage().GetWidth() /2 ),msg1_y, 10000);

}
